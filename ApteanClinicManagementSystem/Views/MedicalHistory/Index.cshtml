@model IEnumerable<ClinicManagementSystemModels.Models.DisplayMedicalHistoryModel>

@{
    ViewBag.Title = "Index";
}


<h2>Patients Medical Histories</h2>

<hr />
<table id="pageTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <button class="btn btn-default" onclick="@("location.href='"+ Url.Action("Details","MedicalHistory",new { id = item.MedicalHistoryId })+ "'")"><i class="fas fa-folder"></i>View</button>
                <button class="btn btn-primary" onclick="@("location.href='"+ Url.Action("Edit","MedicalHistory",new { id = item.MedicalHistoryId })+ "'")"><i class="far fa-edit"></i>Edit</button>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.MedicalHistoryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MedicalHistoryId })*@
            </td>
        </tr>
        }
        </tbody>
</table>

