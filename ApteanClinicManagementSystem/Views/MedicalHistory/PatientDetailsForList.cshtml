@model IEnumerable<ClinicManagementSystemModels.Models.DisplayMedicalHistoryModel>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @if (item.AppointmentId == -1)
            {
                @Html.Raw("-")
            }
            else
            {
                @Html.DisplayFor(ModelItem => item.Date)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>

        <dd>
            @Html.DisplayFor(ModelItem => item.PatientName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DoctorName)
        </dt>
        <dd>
            @Html.DisplayFor(ModelItem => item.DoctorName)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Diagnosis)
        </dt>

        <dd>
            @Html.DisplayFor(ModelItem => item.Diagnosis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Medicine)
        </dt>

        <dd>
            @Html.DisplayFor(ModelItem => item.Medicine)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>

        <dd>
            @Html.DisplayFor(ModelItem => item.Remarks)
        </dd>

    </dl>
    <hr />
}
