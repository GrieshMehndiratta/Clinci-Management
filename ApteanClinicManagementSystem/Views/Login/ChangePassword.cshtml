@model ApteanClinicManagementSystem.Models.ResetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change Password</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
    <style type="text/css">
        body {
            margin: 20pt !important;
            background-image: url(../Images/loginBackground.jpg);
            background-size: cover;
            background-attachment: fixed
        }

        .error {
            color: red;
        }

        far fa-hospital {
            margin-right: 25%;
        }
    </style>
</head>
<body>

    <div class="body-content" style="margin-top:10%;">
        <div class="container panel panel-default" style="background-color: rgba(247,247,247,0.8);padding:20px">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h2>Reset Password</h2>
                <hr />

                <div class="errorMessage">
                    <p>@ViewBag.Message</p>
                </div>
                <center>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                    </div>
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "ConfirmPassword", @class = "form-control" })
                    <div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(a => a.ResetCode)
                    </div>
                    <input type="submit" value="Submit" class="btn btn-success" style="margin-left:0px;"/>
                    <hr />
                    <h2><i class="far fa-hospital"></i>Clinic Management System</h2>
                </center>
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>
