@model ApteanClinicManagementSystem.Models.ReportViewModel
@{
    ViewBag.Title = "MonthlyReport";
}

<h2>Financial Summary</h2>
<hr />
<h3>Total Patients:@Model.PatientCount</h3>
<h3>Total Payments:@Model.TotalCost</h3>

<hr />
<div class="alert-warning">
    @Html.ValidationMessageFor(model => model.Year)
</div>
<div class="form-inline">
    @using (Html.BeginForm("MonthlyReport", "Reports", new { SelectedMonth = Model.SelectedMonth, Year = Model.Year }, FormMethod.Post))
    {

        <div class="form-group" style="margin-left:0%">
            <label class="mr-sm-2">Month : </label>@Html.EnumDropDownListFor(model => model.SelectedMonth, new { @class = "form-control mb-2 mr-sm-2", @Style = "width:30%" })
            <label class="mr-sm-2">Year: </label>@Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", @Style = "width:20%" } })
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>

        </div>
    }
</div>
<br />

<div>
    @Html.Partial("_FiscalReports", Model)
</div>
