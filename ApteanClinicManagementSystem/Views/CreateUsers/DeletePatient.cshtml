@model ClinicManagementSystemModels.Models.PatientModel

@{
    ViewBag.Title = "DeletePatient";
}

<h2>Delete Patient</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.FullName)
        </dd>

        <dt>
            Email Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.EmailId)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Height)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>

    </dl>
    <button class="btn btn-danger" onclick="@("location.href='"+ Url.Action("DeleteConfirmed","CreateUsers",new { id = Model.PatientId })+ "'")"><i class="fas fa-trash-alt"></i> Delete</button>

</div>
