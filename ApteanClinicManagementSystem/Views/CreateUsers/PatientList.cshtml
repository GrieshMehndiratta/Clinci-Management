@model IEnumerable<ClinicManagementSystemModels.Models.PatientModel>

@{
    ViewBag.Title = "PatientList";
}
<h2>Patient List</h2>
<hr />
<table id="pageTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Token ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetails.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetails.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetails.Address)
            </th>
            <th>
                <button class="btn btn-primary" onclick="@("location.href='"+ Url.Action("AddPatient","CreateUsers")+ "'")"><i class="far fa-edit"></i> Add</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDetails.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDetails.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDetails.Address)
                </td>
                <td>
                    <button class="btn btn-default" onclick="@("location.href='"+ Url.Action("PatientDetails","CreateUsers",new { id = item.PatientId })+ "'")"><i class="fas fa-folder"></i> View</button>
                    <button class="btn btn-danger" onclick="@("location.href='"+ Url.Action("DeletePatient","CreateUsers",new { id = item.PatientId })+ "'")"><i class="fas fa-trash-alt"></i> Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
